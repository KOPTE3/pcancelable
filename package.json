{
  "name": "promise-cancelable",
  "browser": "dist/promise-cancelable.js",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "version": "1.0.0",
  "description": "Wrapper to create cancelable promises",
  "main": "index.js",
  "repository": "git@github.com:joaogranado/promise-cancelable.git",
